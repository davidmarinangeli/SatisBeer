<resources>

    <style name="MoreInfoButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Satisbeer.Toolbar.Text1" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="Satisbeer.Toolbar.Text2" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Base.Theme.MaterialComponents.SearchBar" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/searchbar_background</item>
        <item name="android:drawableStart">@drawable/ic_baseline_search_24</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/searchBarItems</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/searchBarItems</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/searchBarItems</item>
    </style>
</resources>